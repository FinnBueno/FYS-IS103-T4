<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" stylesheets="@../../css/mainCss.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.is103t4.corendonluggagesystem.scenes.filter.LuggageFilterController">
    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="5.0" prefWidth="40.0" />
                    <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <BorderPane.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </BorderPane.margin>
                <Label text="%first" />
                <Label text="%last" GridPane.rowIndex="1" />
                <Label text="%city" GridPane.rowIndex="2" />
                <Label text="%address" GridPane.rowIndex="3" />
                <Label text="%flight" GridPane.rowIndex="4" />
                <Label text="%status" GridPane.columnIndex="3" />
                <Label text="%type" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <Label text="%tag" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <Label text="%brand" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                <Label text="%colour" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                <Label text="%characteristics" GridPane.columnIndex="3" GridPane.rowIndex="5" />
                <TextField fx:id="firstNameField" promptText="%ovFirst" GridPane.columnIndex="1" />
                <TextField fx:id="lastNameField" promptText="%last" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="cityField" promptText="%ovCity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="addressField" promptText="%ovAddress" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <ComboBox fx:id="flightBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <ComboBox fx:id="statusBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="4" />
                <ComboBox fx:id="typeBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <TextField fx:id="tagField" promptText="%acTag" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                <TextField fx:id="brandField" promptText="%ovBrand" GridPane.columnIndex="4" GridPane.rowIndex="3" />
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="4" GridPane.rowIndex="4">
                    <ColorPicker fx:id="colorPicker"/>
                    <CheckBox fx:id="noColor" mnemonicParsing="false" text="%unknown">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </CheckBox>
                </HBox>
                <TextField promptText="%ovCharacteristics" fx:id="characteristics" GridPane.columnIndex="4" GridPane.rowIndex="5" />
            </GridPane>
        </center>
        <bottom>
          <Button fx:id="applyButton" onAction="#applyFilters" mnemonicParsing="false" text="%filter" BorderPane.alignment="CENTER">
              <BorderPane.margin>
                  <Insets bottom="15.0" />
              </BorderPane.margin>
          </Button>
        </bottom>
    </BorderPane>
</AnchorPane>
